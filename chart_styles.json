{
  "chart_config": {
    "default_height": 600,
    "text_font_size": 16,
    "title_font_size": 24,
    "axis_title_font_size": 18,
    "tick_font_size": 14
  },
  "colors": {
    "factory_colors": {
      "A관": "#1f77b4",
      "C관": "#aec7e8", 
      "S관": "#ff0000"
    },
    "process_colors": {
      "[10] 사출조립": "#1f77b4",
      "[20] 분리": "#ff7f0e",
      "[45] 하이드레이션/전면검사": "#2ca02c",
      "[55] 접착/멸균": "#d62728",
      "[80] 누수/규격검사": "#9467bd"
    },
    "default_color": "#888888"
  },
  "legend_config": {
    "orientation": "h",
    "yanchor": "top",
    "y": 0.98,
    "xanchor": "right", 
    "x": 0.98,
    "bgcolor": "rgba(255,255,255,0)",
    "bordercolor": "rgba(255,255,255,0)",
    "borderwidth": 0,
    "font_size": 12
  },
  "margins": {
    "default": {
      "l": 80,
      "r": 80, 
      "t": 120,
      "b": 80
    },
    "with_text_labels": {
      "l": 80,
      "r": 80,
      "t": 150,
      "b": 120
    }
  },
  "text_config": {
    "number_format": "%{text:,.0f}",
    "percentage_format": "%{text:.2f}%",
    "position": "top center",
    "font": {
      "size": 16,
      "color": "black"
    }
  },
  "axis_config": {
    "x_axis": {
      "type": "category",
      "tickangle": 0,
      "title_standoff": 20
    },
    "y_axis": {
      "title_standoff": 20,
      "autorange": true
    }
  },
  "line_chart": {
    "mode": "lines+markers+text",
    "marker_size": 8,
    "line_width": 3
  },
  "bar_chart": {
    "textposition": "auto",
    "texttemplate": "%{text:,.0f}"
  }
}